<%- include ../partials/header.ejs %>

<div class="container loginForm">
    <% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
    <% } %>
    <form class="form-signin well loginForm" method="post" action="/auth/login">
        <h2 class="form-signin-heading">Please Sign In.</h2>
            <label for="username" class="">Username:</label>
            <input name="username" id="username" class="form-control inputEmail" placeholder="Username" required />

            <label for="password" class="formBottomInput">Password:</label>
            <input name="password" id="password" type="password" class="form-control inputPassword" placeholder="Password" required />
        </fieldset>
        <hr />
        <button class="btn btn-primary btn-lg btn-block">Login</button>

        <!--Need access?  <a href="/auth/register" title="Register">Register</a>-->
    </form>
<%- include ../partials/footer.ejs %>