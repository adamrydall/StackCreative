<%- include partials/header.ejs %>

<main class="container" id="create">

    <form method="post" action="/createuser" class="form-signin well">
    <h1 class="form-create-heading">Create User</h1><br />
        <fieldset>
            <label for="name" class="col-sm-2">Name:</label>
            <input name="name" id="name" type="text" class="form-control inputName" required /><br />
        </fieldset>
        <fieldset>
            <label for="username" class="col-sm-2">Username:</label>
            <input name="username" id="username" class="form-control inputUsername" required /><br />
        </fieldset>
        <fieldset>
            <label for="password" class="col-sm-2">Password:</label>
            <input name="password" id="password" type="password" class="form-control inputPassword"  required /><br />
        </fieldset>
        <button class="btn btn-primary btn-lg btn-block">Create</button>
        <hr />
    </form>

</main>

